<div id="wrapper">
  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="#">
          Add Courses
        </a>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h1>Hello, <%= username %></h1>

          <img src="http://files.parsetfss.com/6f36b925-7def-449c-8f64-fb98e0e494ae/tfss-6cdd2b7b-3e4e-49e9-9393-1a9fdd51c6d4-image.jpg"
          height="100px" width="100px">

          <p>Welcome to NoteWorthy!</p>
          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
        </div>
      </div>
    </div>

    <% if courses.nil? or courses.empty? %>
        <div class="alert alert-warning text-center">
          <strong>No Courses</strong>
        </div>
    <% else %>
        <div id="pin-wrapper">
          <div id="columns">
            <% courses.each do |course| %>
                <div class="pin">
                  <h2><%= course['Name'] %></h2>

                  <p>
                    <strong>Professor:</strong> <%= course['Professor'] %>
                    <strong>Description:</strong>
                    <%= course['description'] %>
                  </p>
                </div>
            <% end %>
          </div>
        </div>
    <% end %>

  </div>
  <!-- /#page-content-wrapper -->

</div>

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>